            @Html.LabelFor(model => model.JyuyodoId, "重要度", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.DropDownList("JyuyodoId", null, htmlAttributes: new { @class = "form-control input-sm" })
                @Html.ValidationMessageFor(model => model.JyuyodoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*内容*@
            <div class="col-md-12">
                @Html.LabelFor(model => model.Naiyo, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Naiyo, 5, 80, new { @class = "form-control", style = "max-width:none", placeholder = "問合せ・トラブル内容を入力してください。" })
                @Html.ValidationMessageFor(model => model.Naiyo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @*対応*@
            <div class="col-md-12">
                @Html.LabelFor(model => model.Taio, htmlAttributes: new { @class = "control-label" })
