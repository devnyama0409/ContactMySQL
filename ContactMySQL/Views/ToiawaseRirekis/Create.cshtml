            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Taio, 5, 80, new { @class = "form-control", style = "max-width:none", placeholder = "対応を入力してください。" })
                @Html.ValidationMessageFor(model => model.Taio, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.ActionLink("検索", "Index", null, new { @class = "btn btn-primary col-md-1" })
                <input type="submit" value="登録" class="btn btn-primary col-md-offset-8 col-md-1" />
                @Html.ActionLink("閉じる", "Index", "Home", null, htmlAttributes: new { @class = "btn btn-primary col-md-offset-1 col-md-1" })
